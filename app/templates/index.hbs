<div class="well" id="question-display">
  <div class="row">
    <div class="col-sm-1 col-sm-offset-1">
    </div>
    <div class="col-sm-6">
      <h3 class="index-label">Question:</h3>
    </div>
    <div class="col-sm-4">
      <h3 class="index-label">Asked by:</h3>
    </div>
  </div>

  <div class="row">
    {{#each model.questions as |question|}}
      {{question-tile question=question}}
    {{/each}}
  </div>
</div>

<h6 id="key"><img class="sad-face" src="/assets/images/sad-black.png"> = no answers have yet been given</h6>

{{add-question saveQuestion="saveQuestion"}}
